@model ASPDevApp.ViewModel.ChangeTrainersViewModel
@{
    ViewBag.Title = "ChangeTrainer";
}

<h2>ChangeTrainer</h2>


<div>
    <p class="text-primary m-0 font-weight-bold">List Course</p>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Change Trainer Assign</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Courses)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    @using (Html.BeginForm("ChangeTrainer", "DecentralizationTrainer", "POST"))
                    {
                        <div class="form-group">
                            <input type="hidden" name="courseId" value="@item.Id">
                            <input type="hidden" name="trainerId" value="@Model.TrainerProfile.TrainerId">
                        </div>
                        <div>
                            <button class="btn btn-info">Change</button>
                        </div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>