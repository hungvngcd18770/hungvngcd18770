@model IEnumerable<ASPDevApp.Models.Category>
@{
    ViewBag.Title = "Index";
}

<h1>
    Index Category
</h1>
<style>
    h1 {
        display: inline-block;
        font: bold 4.5em/1.5 Bebas, sans-serif;
        color: #5CA17C;
        font-size: 72px;
        text-transform: uppercase;
    }
</style>


@using (Html.BeginForm("Index", "Categories", "POST"))
{
    <div class="form-group">
        <label for="fname">Search by Category Name:</label><br>
        @Html.TextBox("searchString", null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button type="submit"><i class="fa fa-search"></i></button>
    </div>
}
@Html.ActionLink("Create new Category", "Create", "Categories",
    null,
    new { @class = "btn btn-primary" })

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Category #</th>
            <th>Category Name</th>
            <th>Category Description</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>


        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    @Html.ActionLink("Details", "Details", "Categories", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "Delete", "Categories", new { id = item.Id }, new { @class = "btn btn-danger" })
                    @Html.ActionLink("Edit","Edit","Categories",new { id = item.Id },new { @class = "btn btn-default" })
                </td>
            </tr>
        }
    </tbody>
</table> 