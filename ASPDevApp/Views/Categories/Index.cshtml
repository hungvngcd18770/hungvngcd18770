@model IEnumerable<ASPDevApp.Models.Category>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Category #</th>
            <th>Category Name</th>
            <th>Category Description</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>

        {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    @Html.ActionLink("Details", "Details", "Categories", new { id = item.Id }, new { @class = "btn btn-primary" })
                    <a href="#" class="btn btn-danger">Delete</a>
                    <a href="#" class="btn btn-default">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table> 